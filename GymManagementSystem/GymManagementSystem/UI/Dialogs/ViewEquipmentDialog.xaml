<Window x:Class="GymManagementSystem.UI.Dialogs.ViewEquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow"
        Title="Equipment Details" Height="500" Width="600" 
        ResizeMode="NoResize" Background="#F5F5F5" 
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2ec4b6"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2ec4b6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF46E8C1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF18a999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Equipment Information" FontSize="22" FontWeight="Bold" 
                       Foreground="#FF2ec4b6" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Equipment Details" Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Text="Equipment ID:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock x:Name="EquipmentIdText" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Text="Name:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock x:Name="NameText" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Text="Category:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock x:Name="CategoryText" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Text="Quantity:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock x:Name="QuantityText" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Text="Condition:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock x:Name="ConditionText" Style="{StaticResource ValueStyle}"/>

                    <!-- Status Summary -->
                    <TextBlock Text="Status Summary" Style="{StaticResource SectionHeaderStyle}" Margin="0,20,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,5,0">
                            <StackPanel>
                                <TextBlock Text="Available Units" FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="AvailableUnitsText" Text="0" FontSize="20" FontWeight="Bold" 
                                           Foreground="#FF2ec4b6" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                BorderThickness="1" CornerRadius="6" Padding="10" Margin="5,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Condition Status" FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="StatusIndicatorText" Text="Good" FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="Close" Width="200" Height="35" Margin="0,20,0,0" 
                    Style="{StaticResource CloseButtonStyle}" 
                    Click="Close_Click" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
