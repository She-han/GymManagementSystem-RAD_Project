<Window x:Class="GymManagementSystem.UI.Dialogs.EditEquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow"
        Title="Edit Equipment" Height="550" Width="400" 
        ResizeMode="NoResize" Background="#F5F5F5" 
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Same styles as AddMemberDialog -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="34"/>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2ec4b6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF46E8C1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF18a999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Edit Equipment" FontSize="20" Foreground="#FF2ec4b6" 
                           Margin="0,0,0,18" FontWeight="Bold"/>

                <TextBlock Text="Equipment ID" Foreground="#666666"/>
                <TextBox x:Name="EquipmentIdText" IsReadOnly="True" Background="#F5F5F5"/>

                <TextBlock Text="Name *" Foreground="#666666"/>
                <TextBox x:Name="NameText"/>

                <TextBlock Text="Category" Foreground="#666666"/>
                <ComboBox x:Name="CategoryCombo">
                    <ComboBoxItem>Cardio</ComboBoxItem>
                    <ComboBoxItem>Strength</ComboBoxItem>
                    <ComboBoxItem>Free Weights</ComboBoxItem>
                    <ComboBoxItem>Machines</ComboBoxItem>
                    <ComboBoxItem>Accessories</ComboBoxItem>
                    <ComboBoxItem>Other</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Quantity *" Foreground="#666666"/>
                <TextBox x:Name="QuantityText"/>

                <TextBlock Text="Condition" Foreground="#666666"/>
                <ComboBox x:Name="ConditionCombo">
                    <ComboBoxItem>Excellent</ComboBoxItem>
                    <ComboBoxItem>Good</ComboBoxItem>
                    <ComboBoxItem>Fair</ComboBoxItem>
                    <ComboBoxItem>Needs Maintenance</ComboBoxItem>
                    <ComboBoxItem>Poor</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Update" Width="100" Height="40" Margin="0,0,12,0" 
                        Click="Update_Click" 
                        Style="{StaticResource CloseButtonStyle}"/>
                <Button Content="Cancel" Width="100" Height="40" 
                        Click="Cancel_Click" Background="#666666"
                        Style="{StaticResource CloseButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
