<Window x:Class="GymManagementSystem.UI.PaymentDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementSystem.UI" 
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Payment Details" 
        WindowState="Maximized" 
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#46E8C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="12" 
                                Background="{TemplateBinding Background}" 
                                Padding="30,12">
                            <Border.Effect>
                                <DropShadowEffect Color="#46E8C1" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3DD4AF"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Data Text Style -->
        <Style x:Key="DataText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Radio Button Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="RadioBorder" 
                                    Width="24" 
                                    Height="20" 
                                    CornerRadius="12" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="2" 
                                    Background="White"
                                    Margin="0,0,10,0">
                                <Ellipse x:Name="RadioDot" 
                                         Width="12" 
                                         Height="12" 
                                         Fill="#46E8C1" 
                                         Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="#46E8C1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="#46E8C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                <ToggleButton Grid.Column="1" 
                                              HorizontalAlignment="Right"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="Transparent"
                                              BorderThickness="0">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#666666"/>
                                </ToggleButton>
                                <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       AllowsTransparency="True">
                                    <Border Background="White" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="2"
                                            CornerRadius="10"
                                            Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                        </Border.Effect>
                                        <ScrollViewer MaxHeight="200">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F9F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Button Click="BackButton_Click"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="40,40,0,0"
        Padding="0"
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand">
            <Border Background="#46E8C1"
            CornerRadius="20"
            Padding="20,8">
                <TextBlock Text="← Back"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
                <Border.Effect>
                    <DropShadowEffect Color="#46E8C1" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
            </Border>
        </Button>
        <!-- Main Content -->
        <Border CornerRadius="24" 
                Background="White" 
                Padding="50" 
                Margin="80"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,15">
                    <Border Background="#46E8C1"
                            Width="60"
                            Height="60"
                            CornerRadius="30"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8">
                        <TextBlock Text="💳" 
                                   FontSize="30" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Payment Details" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#333333" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Complete your membership purchase" 
                               FontSize="14" 
                               Foreground="#777777" 
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,30"
                              >
                    <Border 
                        Background="#FAFAFA"
                        CornerRadius="16"
                        Padding="50" Height="1000"
                       >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Member Information -->
                            <Label Content="Member Name:" 
                               Style="{StaticResource FormLabel}"
                               Grid.Row="0" 
                               Grid.Column="0"
                               Margin="0,0,20,30"/>

                            <TextBlock x:Name="txtName" 
                                   Text="John Doe" 
                                   Style="{StaticResource DataText}"
                                   Grid.Row="0" 
                                   Grid.Column="1"
                                   Margin="0,0,0,30"/>

                            <!-- Package Selection -->
                            <Label Content="Select Package:" 
                               Style="{StaticResource FormLabel}"
                               Grid.Row="1" 
                               Grid.Column="0"
                               Margin="0,0,20,30"
                               VerticalAlignment="Top"/>

                            <StackPanel Grid.Row="1" 
                                    Grid.Column="1" 
                                    Margin="0,0,0,30">

                                <Border Background="White" 
                                    CornerRadius="10" 
                                    Padding="16"
                                    Margin="0,0,0,12"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="0" Opacity="0.05"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="radioBtn1" 
                                                 GroupName="Packages" 
                                                 VerticalAlignment="Center"/>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="1 Month Package" 
                                                   Foreground="#333333"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                            <TextBlock Text="Rs. 3,000.00" 
                                                   Foreground="#46E8C1"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Background="White" 
                                    CornerRadius="10" 
                                    Padding="16"
                                    Margin="0,0,0,12"
                                    BorderBrush="#46E8C1"
                                    BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#46E8C1" BlurRadius="12" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="radioBtn2" 
                                                 GroupName="Packages" 
                                                 VerticalAlignment="Center"/>
                                        <StackPanel Margin="10,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="3 Months Package" 
                                                       Foreground="#333333"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"/>
                                                <Border Background="#46E8C1" 
                                                    CornerRadius="4" 
                                                    Padding="6,2"
                                                    Margin="10,0,0,0">
                                                    <TextBlock Text="POPULAR" 
                                                           Foreground="White"
                                                           FontSize="11"
                                                           FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="Rs. 8,000.00" 
                                                   Foreground="#46E8C1"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Background="White" 
                                    CornerRadius="10" 
                                    Padding="16"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="0" Opacity="0.05"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="radioBtn3" 
                                                 GroupName="Packages" 
                                                 VerticalAlignment="Center"/>
                                        <StackPanel Margin="10,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="12 Months Package" 
                                                       Foreground="#333333"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"/>
                                                <Border Background="#FF9800" 
                                                    CornerRadius="4" 
                                                    Padding="6,2"
                                                    Margin="10,0,0,0">
                                                    <TextBlock Text="BEST VALUE" 
                                                           Foreground="White"
                                                           FontSize="11"
                                                           FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="Rs. 30,000.00" 
                                                   Foreground="#46E8C1"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Payment Method -->
                            <Label Content="Payment Method:" 
                               Style="{StaticResource FormLabel}"
                               Grid.Row="2" 
                               Grid.Column="0"
                               Margin="0,0,20,0"/>

                            <ComboBox x:Name="cmbPaymentMethod"
                                  Grid.Row="2" 
                                  Grid.Column="1"
                                  SelectedIndex="0"
                                  Height="50">
                                <ComboBoxItem Content="💳 Credit Card"/>
                                <ComboBoxItem Content="💳 Debit Card"/>
                                <ComboBoxItem Content="🏦 Bank Transfer"/>
                                <ComboBoxItem Content="💵 Cash"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                </ScrollViewer>

                <!-- Pay Button -->
                <Button Grid.Row="2"
                        Content="Pay Now" 
                        Style="{StaticResource ModernButton}"
                        Width="250" 
                        Height="56" 
                        HorizontalAlignment="Center" 
                        Click="Button_Click"/>
            </Grid>
        </Border>

        <!-- Popup Panel -->
        <Border x:Name="popupPanel"
                Background="White"
                BorderBrush="#46E8C1"
                BorderThickness="2"
                CornerRadius="16"
                Padding="20"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="700" 
                Height="500"
                Panel.ZIndex="100">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="50" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <wv2:WebView2 x:Name="popupWebView" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>