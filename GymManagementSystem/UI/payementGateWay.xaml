<Window x:Class="GymManagementSystem.UI.payementGateWay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Payment Gateway"
        WindowState="Maximized"
        Background="#F0F2F5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="14" Color="#33000000" ShadowDepth="2" Direction="270" Opacity="0.15"/>
        <Style x:Key="SidebarButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="22" Margin="0,0,12,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2ec4b6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF18a999"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DashboardCard" TargetType="{x:Type Border}">
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,30,0"/>
            <Setter Property="MinWidth" Value="280"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>
        <Style x:Key="CardTitle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="CardValue" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FF2ec4b6"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <!-- Modern Large Button for Panel -->
        <Style x:Key="LargePanelButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF2ec4b6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16" BorderThickness="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="28" Margin="0,0,14,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF46E8C1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF18a999"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LargerPanelButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF2ec4b6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16" BorderThickness="0">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="44" Margin="0,10,0,6" HorizontalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF46E8C1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF18a999"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar Column -->
            <ColumnDefinition Width="250"/>
            <!-- Main Content Column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <StackPanel Margin="0,24,0,36" VerticalAlignment="Top">
                    <TextBlock Text="FlexFit"
                               Foreground="#FF2ec4b6"
                               FontSize="36"
                               FontWeight="Bold"
                               FontFamily="Tahoma"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Gym Management System"
                               Foreground="#666666"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                </StackPanel>
                <Button Tag="🏠" Content="Dashboard" Style="{StaticResource SidebarButton}" Click="Dashboard_Click"/>
                <Button Tag="👥" Content="Members" Style="{StaticResource SidebarButton}" Click="Members_Click"/>
                <Button Tag="🏋️" Content="Trainers" Style="{StaticResource SidebarButton}" Click="Trainers_Click"/>
                <Button Tag="💳" Content="Payments" Style="{StaticResource SidebarButton}" Click="Payments_Click"/>
                <Button Tag="🛠️" Content="Equipments" Style="{StaticResource SidebarButton}" Click="Equipments_Click"/>
                <Button Tag="⚙️" Content="Settings" Style="{StaticResource SidebarButton}" Click="Settings_Click"/>
                <Button Tag="🚪" Content="Logout" Style="{StaticResource SidebarButton}" Click="Logout_Click"/>
                <StackPanel VerticalAlignment="Bottom" Margin="0,300,0,0">
                    <TextBlock Text="© 2025 FlexFit" Foreground="#999999" FontSize="12" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 💳 Dashboard Summary Cards -->
            <UniformGrid Columns="4" Margin="0 0 0 25">
                <!-- Total Payments -->
                <Border CornerRadius="20" Background="#4E73DF" Padding="25" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Total Payments" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtTotalPayments" Text="120" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Payments in Progress -->
                <Border CornerRadius="20" Background="#1CC88A" Padding="25" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Payments in Progress" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtPaymentsInProgress" Text="35" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Members -->
                <Border CornerRadius="20" Background="#36B9CC" Padding="25" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Members" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtMembers" Text="80" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Trainers -->
                <Border CornerRadius="20" Background="#F6C23E" Padding="25" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Trainers" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtTrainers" Text="12" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- 💰 Payment List Section -->
            <Border Grid.Row="1" Background="White" CornerRadius="20" Padding="25" Margin="0,0,0,10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="6" Opacity="0.15"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="spanel" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
